{
    "configurations": [
        {
            "name": "ESP-IDF",
            "configurationProvider": "espressif.esp-idf-extension",
            "compileCommands": [
                "${workspaceFolder}/firmware/build/compile_commands.json"
            ],
            "compilerPath": "${config:idf.toolsPath}/tools/xtensa-esp-elf/esp-15.1.0_20250607/xtensa-esp-elf/bin/xtensa-esp32-elf-gcc",
            "intelliSenseMode": "gcc-x64",
            "includePath": [
                "${workspaceFolder}/firmware/**"
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}/firmware",
                    "${workspaceFolder}/firmware/build"
                ],
                "limitSymbolsToIncludedHeaders": true
            }
        }
    ],
    "version": 4
}